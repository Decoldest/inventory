extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      textarea#name.form-control(placeholder='Name' name='name' required)= undefined===book ? '' : book.summary
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(placeholder='Description' name='description')= undefined===book ? '' : book.description
    div.form-group
      label(for='price') Price:
      input#price.form-control(placeholder='Price' name='price' type='number' required value= (undefined===book ? '' : book.price))
    div.form-group
      label(for='stock') Price:
      input#stock.form-control(placeholder='Stock' name='stock' type='number' required value= (undefined===book ? '' : book.stock))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
