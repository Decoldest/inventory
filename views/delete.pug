extends layout 

block content 
  p Do you really want to delete this item - #{item.name}?

    form(method='POST')
      div.form-group
        input#itemid.form-control(type='hidden', name='itemid', value=item._id )
      div.form-group
        label(for='password') Password:
        input#password.form-control(type='password', name='password')

      button.btn.btn-primary(type='submit') Delete
      
  if errors
    ul
      for error in errors
        li!= error.msg